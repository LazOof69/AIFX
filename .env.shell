# AIFX Environment Configuration | AIFX 環境配置
# Generated: 2025-09-04
# Python Path Configuration for Package Installation | 包安裝的Python路徑配置

# Add user local bin to PATH for pip and python commands
# 將用戶本地bin添加到PATH以使用pip和python命令
export PATH="$HOME/.local/bin:$PATH"

# Python Environment Variables | Python環境變數
export PYTHONPATH="$PYTHONPATH:$(pwd)/src/main/python"

# AIFX Specific Configuration | AIFX特定配置
export AIFX_ROOT="$(pwd)"
export AIFX_DATA_DIR="$AIFX_ROOT/data"
export AIFX_MODELS_DIR="$AIFX_ROOT/models"
export AIFX_OUTPUT_DIR="$AIFX_ROOT/output"

# Disable TensorFlow warnings (optional) | 禁用TensorFlow警告（可選）
export TF_CPP_MIN_LOG_LEVEL=2

# Development Environment | 開發環境
export AIFX_ENV="development"
export AIFX_DEBUG="true"

# Network Test Configuration | 網路測試配置
export SKIP_NETWORK_TESTS="true"

echo "✅ AIFX Environment configured successfully | AIFX環境配置成功"
echo "📦 Python packages available in user space | Python包可在用戶空間使用"
echo "🔧 Use 'source .env' to load this configuration | 使用 'source .env' 加載此配置"