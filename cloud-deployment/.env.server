# AIFX Server Environment Configuration
# AIFX 伺服器環境配置
# Optimized for Ubuntu production servers | 針對 Ubuntu 生產伺服器優化

# =============================================================================
# Application Settings | 應用程式設定
# =============================================================================
AIFX_WEB_PORT=8080
AIFX_LOG_LEVEL=INFO
AIFX_DEBUG=false
AIFX_ENVIRONMENT=production

# =============================================================================
# Performance Settings (Server Optimized) | 性能設定（伺服器優化）
# =============================================================================
# Adjust based on your server specs | 根據您的伺服器規格調整

# For servers with 2-4GB RAM | 適用於 2-4GB 記憶體的伺服器
WORKERS=2
MAX_CONNECTIONS=100
CACHE_TTL=600

# For servers with 4-8GB RAM | 適用於 4-8GB 記憶體的伺服器
# WORKERS=4
# MAX_CONNECTIONS=200
# CACHE_TTL=900

# For servers with 8GB+ RAM | 適用於 8GB+ 記憶體的伺服器
# WORKERS=6
# MAX_CONNECTIONS=300
# CACHE_TTL=1200

# =============================================================================
# Trading Configuration | 交易配置
# =============================================================================
TRADING_ENABLED=false
TRADING_MODE=demo
DEFAULT_CURRENCY_PAIRS=EUR/USD,USD/JPY,GBP/USD,AUD/USD,USD/CAD
DEFAULT_TIMEFRAME=1H

# =============================================================================
# Security Settings (Production Ready) | 安全設定（生產就緒）
# =============================================================================
# Update these for production deployment | 生產部署時請更新這些設定

# CORS Settings | CORS 設定
ALLOWED_ORIGINS=*
# For production, set specific domains | 生產環境請設定特定域名
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Security | API 安全
API_KEY_REQUIRED=false
# Uncomment and set for production | 生產環境請取消註解並設定
# API_KEY=your-secure-api-key-here-min-32-chars
# JWT_SECRET=your-jwt-secret-here-min-32-chars

# Rate Limiting | 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# Database Configuration | 資料庫配置
# =============================================================================
# Using in-memory SQLite by default | 預設使用記憶體內 SQLite
DATABASE_URL=sqlite:///data/aifx.db

# For production, consider PostgreSQL | 生產環境建議使用 PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/aifx
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# =============================================================================
# Caching Configuration | 快取配置
# =============================================================================
# Using in-memory cache by default | 預設使用記憶體快取
CACHE_TYPE=memory

# For production, consider Redis | 生產環境建議使用 Redis
# CACHE_TYPE=redis
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_DB=1

# =============================================================================
# Logging Configuration | 日誌配置
# =============================================================================
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/aifx.log
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Structured logging | 結構化日誌
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_CALLER=true

# =============================================================================
# Monitoring & Health Checks | 監控與健康檢查
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# Server Optimization | 伺服器優化
# =============================================================================
# Connection handling | 連接處理
KEEP_ALIVE=true
KEEP_ALIVE_TIMEOUT=30
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=60

# Thread/Process settings | 線程/進程設定
THREAD_POOL_SIZE=20
PROCESS_POOL_SIZE=4

# Memory management | 記憶體管理
GC_THRESHOLD=100000
MAX_MEMORY_MB=1536

# =============================================================================
# SSL/TLS Configuration (if using direct HTTPS) | SSL/TLS 配置（如直接使用 HTTPS）
# =============================================================================
# SSL_ENABLED=false
# SSL_CERT_PATH=/app/certs/cert.pem
# SSL_KEY_PATH=/app/certs/key.pem
# SSL_CA_PATH=/app/certs/ca.pem

# =============================================================================
# Backup Configuration | 備份配置
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM | 每日凌晨 2 點
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# =============================================================================
# External Services | 外部服務
# =============================================================================
# Market Data Provider | 市場數據提供商
MARKET_DATA_PROVIDER=yahoo
MARKET_DATA_API_KEY=

# Notification Services | 通知服務
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=

# Webhook notifications | Webhook 通知
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# Feature Flags | 功能標誌
# =============================================================================
FEATURE_AI_PREDICTION=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_BACKTESTING=true
FEATURE_PAPER_TRADING=true
FEATURE_LIVE_TRADING=false
FEATURE_MULTI_BROKER=false
FEATURE_ADVANCED_ANALYTICS=true

# =============================================================================
# Development & Testing | 開發與測試
# =============================================================================
# These should be false in production | 生產環境中這些應該為 false
DEV_MODE=false
TEST_MODE=false
MOCK_DATA=false
PROFILING_ENABLED=false

# =============================================================================
# Timezone & Localization | 時區與本地化
# =============================================================================
TIMEZONE=UTC
LOCALE=en_US
CURRENCY_DISPLAY=USD

# Trading session times (UTC) | 交易時段時間（UTC）
TRADING_SESSION_START=00:00
TRADING_SESSION_END=23:59

# =============================================================================
# Resource Limits | 資源限制
# =============================================================================
# These help prevent resource exhaustion | 這些有助於防止資源耗盡
MAX_CONCURRENT_REQUESTS=100
MAX_RESPONSE_TIME_MS=5000
MAX_FILE_UPLOAD_SIZE=50MB
MAX_QUERY_RESULTS=10000

# Memory limits per component | 每個組件的記憶體限制
AI_MODEL_MEMORY_LIMIT=512MB
CACHE_MEMORY_LIMIT=256MB
LOG_BUFFER_SIZE=10MB