# AIFX Simplified Web Trading Signals - Optimized Docker Configuration
# AIFX 簡化網頁交易信號 - 優化Docker配置

FROM python:3.9-slim

# Set metadata
LABEL maintainer="AIFX Trading System"
LABEL description="24/7 Forex Trading Signals Web Interface - Optimized"
LABEL version="2.0.0"

# Set environment variables for optimization
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    AIFX_ENV=production \
    TZ=UTC \
    PYTHONPATH=/app \
    AIFX_IN_CONTAINER=true \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies in a single layer for efficiency
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    curl \
    procps \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* /var/tmp/*

# Create non-root user for security
RUN groupadd -r aifx && useradd -r -g aifx aifx

# Copy simplified requirements file first for better caching
COPY requirements-web.txt .

# Install Python dependencies with optimizations
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir --compile -r requirements-web.txt && \
    pip cache purge

# Copy application source code
COPY src/ src/

# Copy essential configuration files (optional)
# COPY CLAUDE.md . (removed - not required for web interface)

# Create necessary directories with proper permissions
RUN mkdir -p logs data/cache output && \
    chown -R aifx:aifx /app

# Fix permissions
RUN chown -R aifx:aifx /app

# Switch to non-root user
USER aifx

# Optimized health check with better timing for production
HEALTHCHECK --interval=60s --timeout=15s --start-period=45s --retries=3 \
    CMD curl -f http://localhost:8080/api/health || exit 1

# Expose port
EXPOSE 8080

# Use optimized startup with performance monitoring
CMD ["python", "-u", "-m", "src.main.python.web_interface"]