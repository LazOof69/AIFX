# AIFX Simplified Web Trading Signals - Docker Configuration
# AIFX 簡化網頁交易信號 - Docker配置

FROM python:3.9-slim

# Set metadata
LABEL maintainer="AIFX Trading System"
LABEL description="24/7 Forex Trading Signals Web Interface"
LABEL version="1.0.0"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    AIFX_ENV=production \
    TZ=UTC \
    PYTHONPATH=/app

# Set working directory
WORKDIR /app

# Install system dependencies required for the web app
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r aifx && useradd -r -g aifx aifx

# Create and copy simplified requirements file
COPY << 'EOF' requirements-web.txt
fastapi==0.104.1
uvicorn[standard]==0.24.0
websockets==12.0
jinja2==3.1.2
python-multipart==0.0.6
pandas==2.1.3
numpy==1.25.2
scikit-learn==1.3.2
xgboost==2.0.2
yfinance==0.2.28
python-dateutil==2.8.2
pytz==2023.3
aiofiles==23.2.1
psutil==5.9.6
EOF

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-web.txt

# Copy only necessary application code
COPY src/main/python/web_interface.py src/main/python/
COPY src/main/python/services/lightweight_signal_service.py src/main/python/services/
COPY src/main/python/core/signal_detector.py src/main/python/core/
COPY src/main/python/utils/ src/main/python/utils/
COPY src/main/python/models/ src/main/python/models/
COPY src/main/python/core/__init__.py src/main/python/core/
COPY src/main/python/services/__init__.py src/main/python/services/
COPY src/main/python/__init__.py src/main/python/
COPY src/main/resources/ src/main/resources/

# Copy essential configuration files
COPY CLAUDE.md .

# Create necessary directories with proper permissions
RUN mkdir -p logs data/cache output src/main/python/core src/main/python/services && \
    chown -R aifx:aifx /app

# Create empty __init__.py files if they don't exist
RUN touch src/__init__.py && \
    touch src/main/__init__.py && \
    touch src/main/python/core/__init__.py && \
    touch src/main/python/services/__init__.py && \
    touch src/main/python/utils/__init__.py && \
    touch src/main/python/models/__init__.py

# Fix permissions
RUN chown -R aifx:aifx /app

# Switch to non-root user
USER aifx

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/api/health || exit 1

# Expose port
EXPOSE 8080

# Default command - run the simplified web interface
CMD ["python", "-m", "src.main.python.web_interface"]